<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bannerdois"
    android:orientation="vertical"
    tools:context=".CadastroActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C000000">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bannerbranco" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Strong Innovation"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="350sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Technology and Information"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtCadNome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="240dp"
            android:background="@drawable/botao"
            android:drawableRight="@drawable/ic_baseline_person"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:maxLength="50" />

        <EditText
            android:id="@+id/edtCadEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:background="@drawable/botao"
            android:drawableRight="@drawable/ic_baseline_email"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:maxLength="50" />

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/edtCadTel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:background="@drawable/botao"
            android:drawableRight="@drawable/ic_baseline_phone"
            android:hint="Telefone"
            android:inputType="number"
            app:mask="(__) _____-____"
            app:maskCharacter="_"
            app:maskStyle="completable" />

        <EditText
            android:id="@+id/edtCadSenha"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="480dp"
            android:background="@drawable/botao"
            android:drawableRight="@drawable/ic_baseline_lock"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLength="50" />

        <Button
            android:id="@+id/btnCadCadastrar"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="580dp"
            android:background="@drawable/botaodois"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
