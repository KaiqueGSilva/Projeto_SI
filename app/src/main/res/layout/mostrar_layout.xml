<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7352AC"
    tools:context=".MostrarActivity">


    <ImageView
        android:id="@+id/imgMostrarImagem"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/seguranca" />

    <TextView
        android:id="@+id/txtMostrarTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Segurança da Informação"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMostrarTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/poppins_medium"
        android:justificationMode="inter_word"
        android:padding="40dp"
        android:text="A segurança da informação, às vezes abreviada para InfoSec, é a prática de proteger as informações mitigando os riscos das informações. Faz parte da gestão de risco da informação."
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="normal" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>